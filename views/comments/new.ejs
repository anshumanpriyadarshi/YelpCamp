<%- include("../partials/header.ejs") %> 

<div class="container">
    <div class="m-auto">
        <h1 style="text-align: center;" class="mt-4" >Add New Comment to <%= campground.name %> </h1>
    </div>

    <div style="width: 40%;" class="m-auto">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>  ">Go back</a>
    </div>
    

    
</div>


<%- include("../partials/footer.ejs") %> 