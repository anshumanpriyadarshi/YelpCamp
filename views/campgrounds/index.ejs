
<%- include ("../partials/header") %>

<div class="container">
    <header >
        <div class="jumbotron">
            <h1 class="display-5">The Campgrounds</h1>
            <p>This is where you can select campgrounds from all over the world.</p>
            <a class="btn btn-md btn-dark" href="/campgrounds/new">Add New Campground</a>
        </div>
    </header>

<div class="row" style="display:flex; flex-wrap: wrap; text-align: center; ">
    

        <% campgrounds.forEach((campgrounds)=>{ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <img src = "<%= campgrounds.image %> " class="card-img-top">
                    <div class="card-body mt-0 pt-1">
                        <h4><%= campgrounds.name %> </h4>
                        <a href="/campgrounds/<%= campgrounds._id %> " class="btn btn-block btn-info">Show</a>
                    </div>
                </div>

            </div>

        <%})  %>
    </div>
</div>

</div>




<%- include ("../partials/footer") %>