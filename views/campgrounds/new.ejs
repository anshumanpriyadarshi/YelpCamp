<%- include("../partials/header.ejs") %> 

<div class="container">
    <div class="m-auto">
        <h1 style="text-align: center;" class="mt-4" >Add new Event</h1>
    </div>

    <div style="width: 40%;" class="m-auto">
        <form method="POST" action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="title" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="image url" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="description" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>

</div>


